import { ethers } from "hardhat"
async function main() {
        const [deployer] = await ethers.getSigners();
        console.log("ÐÐ´Ñ€ÐµÑ Ð´ÐµÐ¿Ð»Ð¾ÐµÑ€Ð°:", deployer.address);
        const Lock = await ethers.getContractFactory("Lock");
