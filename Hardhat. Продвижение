        console.log("ðŸ§±ÐŸÐ¾Ð»Ð¸Ð³Ð¾Ð½ Ð´Ð»Ñ ÐºÐ¸Ñ€Ð¿Ð¸Ñ‡Ð½Ð¾Ð³Ð¾ Ð·Ð°Ð²Ð¾Ð´Ð° Ð³Ð¾Ñ‚Ð¾Ð²!ðŸ§±");
